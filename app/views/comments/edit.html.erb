<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="jumbotron space-a comment-Edit-dark">
      <fieldset>
        <h1 class="text-center space-title form-title"> <%= "#{@article.title}" %></h1>
        <div class="col-12">
          <%= simple_form_for([@article, @comment] , html: { class: 'comment-form-Edit-dark' } ) do |f| %>
           <%= f.error_notification %>
            <div class="from-group row">
              <%= f.input :body, label: false, :input_html => { class:"ckeditor" } %>
            </div>
            <div class="form-group ">
              <%= f.button :submit, "Comentar", class: "btn btn-info btn-block form-btn-dark" %>
            </div>
          <% end %>
        </div>
      </fieldset>
    </div>
  </div>
</div>
