<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron space-a">
          <form class="">
            <fieldset>
              <h1 class="text-center space-title form-title"><%= "#{titulo} Articulo" %></h1>
              <div class="">
                <%= form_with(model: article) do |form| %>
                    <div class="form-group row">
                      <%= form.label "Titulo: ", class:"offset-md-2 col-md-3 col-form-label text-right space-label-right" %>
                      <%= form.text_field :title, class: "col-md-4 form-control" %>
                    </div>
                    <div class="form-group row">
                      <%= form.label "Cuerpo: ", class:"offset-md-2 col-md-3 col-form-label text-right space-label-right" %>
                      <%= form.text_area :body, class:"col-md-4 form-control" %>
                    </div>
                    <div class="form-group row">
                      <div class="container text-center">
                        <%= form.submit "Enviar", class:"btn btn-info col-md-3" %>
                        <%= link_to "Atras" , root_path, class:"btn btn-info col-md-3" %>
                      </div>
                    </div>
                <%end%>
              </div>
            </fieldset>
          </form>
      </div>
    </div>
  </div>
</div>
