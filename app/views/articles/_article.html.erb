<div class="col-sm-12 col-md-6 col-lg-4 article-salto">
  <div class="card h-100 article-container">
    <div class="card-body">
        <h5 class="card-title"><%= link_to truncate(article.title , length: 20), article, class: ""  %></h5>
        <p class="card-text"> <%= truncate_html(article.body, length: 100) %></p>
        <%temporal = "Categorias: "%>
        <% article.categories.each do |category| %>
            <% temporal = "#{temporal} #{category.name}" %>
        <%end%>
        <p class=""> <%= temporal %> </p>
     </div>
   </div>
</div>
