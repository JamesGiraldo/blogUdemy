<div class="row">
  <div class="col-md-12">
    <div class="jumbotron devise-dark space-a">
      <h2 class="text-center form-title"> Cambia Tu Contraseña </h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="container">
            <div class="form-group ">
              <%= f.input :password, label: "Nueva Contraseña", required: true, autofocus: true,
                          hint: ("#{@minimum_password_length} Caracteres Minimos" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", placeholder: "Nueva Contraseña" , class: " form-control" } %>
            </div>
            <div class="form-group">
              <%= f.input :password_confirmation,
                          label: "Confirmar Tu Nueva Contraseña",
                          required: true,
                          input_html: { autocomplete: "new-password", placeholder: "Confirmacion de Contraseña" , class: " form-control" } %>
            </div>
            <div class="form-group ">
              <%= f.button :submit, "Cambiar Contraseña", class: "btn btn-success btn-block" %>
              <a class="btn btn-info btn-block" href="<%=new_user_session_path%>">Iniciar Sesión</a>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
