<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">
      <h2 class="text-center form-title"> ¿Olvidaste tu contraseña? </h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="container">
            <div class="form-group ">
              <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" , placeholder: "Correo Electronico" , class: " form-control" } %>
            </div>
            <div class="form-group ">
              <%= f.button :submit, "Enviar Instrucciones de Restablecer Contraseña", class: "btn btn-success btn-block" %>
              <a class="btn btn-info btn-block" href="<%=new_user_session_path%>">Iniciar Sesión</a>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
