<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">
      <h2 class="text-center form-title"> Registrase </h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="container">
            <div class="form-group ">
              <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" , placeholder: "Correo Electronico" , class: " form-control" } %>
            </div>
            <div class="form-group ">
              <%= f.input :password, label: "Contaseña", required: true, hint: ("#{@minimum_password_length} Caracteres Minimos" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", placeholder: "Contraseña" , class: " form-control" } %>
            </div>
            <div class="form-group ">
              <%= f.input :password_confirmation, label: "Confirmar Contraseña", required: true, input_html: { autocomplete: "new-password", placeholder: "Confirmacion De Contraseña" ,class: " form-control" } %>
            </div>
            <div class="form-group ">
              <%= f.button :submit, "Registrarse", class: "btn btn-info btn-block" %>
              <a class="btn btn-info btn-block" href="<%=new_user_session_path%>">Iniciar Sesión</a>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
