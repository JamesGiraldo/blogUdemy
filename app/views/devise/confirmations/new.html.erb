<div class="row">
  <div class="col-md-12">
    <div class="jumbotron devise-dark space-a">
      <h2 class="text-center form-title"> Reenviar instrucciones de confirmación </h2>
        <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="container">
            <div class="form-group ">
              <%= f.input :email, required: true, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                          input_html: { autocomplete: "email" , placeholder: "Correo Electronico" , class: " form-control"  } %>
            </div>
            <div class="form-group ">
              <%= f.button :submit, "Reenviar instrucciones de confirmación", class: "btn btn-info btn-block" %>
              <a class="btn btn-info btn-block" href="<%=new_user_session_path%>">Iniciar Sesión</a>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
