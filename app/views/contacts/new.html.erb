<div class="container-fluid color-a">
  <h1 class="text-center space-title form-title">Contactame</h1>
    <%= form_with(model: @contact, local: true) do |f| %>
      <div class="form-group row container">
        <% if @contact.errors.any? %>
            <div class="" id="error_explanation">
              <h2 class=""> <%= pluralize(@contact.errors.count, "error") %> Prohibido Guardar De Esta Forma El Contacto: </h2>
              <ul class="">
                <% @contact.errors.full_messages.each do |message| %>
                    <li class=""> <%= message %> </li>
                <%end%>
              </ul>
            </div>
        <%end%>
      </div>
      <div class="form-group row">
        <%= f.label "Asunto", class: "offset-md-2 col-md-3 col-form-label text-right space-label-right" %>
        <%= f.text_field :title, class: "col-md-4 form-control" %>
      </div>
      <div class="form-group row">
        <%= f.label "Email", class: "offset-md-2 col-md-3 col-form-label text-right space-label-right" %>
        <%= f.text_field :email, class: "col-md-4 form-control" %>
      </div>
      <div class="form-group row">
        <%= f.label "Descripcion", class: "offset-md-2 col-md-3 col-form-label text-right space-label-right" %>
        <%= f.text_area :description, class: "col-md-4 form-control" %>
      </div>
      <div class="form-group row">
        <div class="container text-center">
          <%= f.submit "Enviar", class: "btn btn-info col-md-3" %>
        </div>
      </div>
    <%end%>
</div>
