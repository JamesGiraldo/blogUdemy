<div class="jumbotron space-a table-responsive Admin-dark">
  <h1 class="Admin-title-dark">Adminitrador</h1>
  <p class=""> <%= link_to "Normal", categories_path(normal: true), class: "btn btn-success Admin-btn-dark" %> </p>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover dataTables-example">
        <thead class="thead-dark">
          <tr>
            <th class="text-center  footable-visible footable-first-column footable-sortable active Admin-th-dark">Titulo</th>
            <th class="text-center  footable-visible footable-first-column footable-sortable active Admin-th-dark">Fecha</th>
            <th class="text-center  footable-visible footable-first-column footable-sortable active Admin-th-dark">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |cat| %>
            <tr class="Admin-tr-dark">
              <td class=""> <%= cat.name %> </td>
              <td class=""> <%= cat.created_at.strftime("%d-%m-%Y %H:%M") %> </td>
              <td class="text-center">
                <%= link_to " Ver ", cat, class: "fa fa-eye  btn btn-info"%>&nbsp;
                <%= link_to " Editar ", edit_category_path(cat), class: "fa fa-pencil-square-o  btn btn-warning"%>&nbsp;
                <%= link_to " Eliminar ", cat, method: :delete, data: { :confirm => "EstÃ¡s seguro? de Eliminar La Categoria #{cat.name}"} , class: "fa fa-trash-o btn btn-danger"%>
              </td>
            </tr>
          <%end%>
          <% unless @categories.present? %>
             <tr>
                <h2 class="text-center">No Hay Informacion Solicitada</h2
             </tr>
          <%end%>
        </tbody>
      </table>
    </div>
</div>
