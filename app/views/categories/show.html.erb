<style type="text/css" media="screen">
  <%= ".#{@category.color}" %>{
    background-color: <%= @category.color %> !important;
  }
</style>
<div class="jumbotron <%= "#{@category.color}" %>">
  <div class="">
    <h1><strong><%= @category.name %></strong></h1>
  </div>
  <div class="">
    <h3><%= @category.color %></h3>
  </div>
  <div class="">
    <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-warning" %>
    <%= link_to 'Back', categories_path, class: "btn btn-info" %>
  </div>
</div>
